{% extends "base.html.twig" %}

{% block body %}
    <form action="{{ url('calculate') }}" method="post">
        <input type="hidden" name="token" value="{{ csrf_token('calculate') }}">
        <table>
            <tr>
                <td>
                    <input required type="number" name="firstNumber" value="">
                </td>
                <td>
                    <select required name="operand">
                        <option value="">--Operator--</option>
                        <option value="plus">Plus</option>
                        <option value="minus">Minus</option>
                        <option value="multiplication">Multiplication</option>
                        <option value="division">Division</option>
                    </select>
                </td>
                <td>
                    <input required type="number" name="secondNumber" value="">
                </td>
                <td>
                    <button type="submit">Calculate</button>
                </td>
            </tr>
            <tr>
                <td colspan="4">
                    Result: N/A
                </td>
            </tr>
        </table>
    </form>
{% endblock %}